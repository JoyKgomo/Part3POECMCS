@model List<Users>
@{
    ViewBag.Title = "Report Claims";
}

<div class="container my-5">
    <div class="text-center mb-4">
        <h1 class="display-4 text-primary">Program Coordinator/Academic Manager Dashboard</h1>
        <p class="lead text-muted">Review and manage lecturer claims</p>
    </div>

    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Lecturer Claims Overview</h5>
        </div>
        <div class="card-body p-0">
            <table class="table table-hover table-striped table-bordered mb-0">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Lecturer ID</th>
                        <th scope="col">Lecturer Name</th>
                        <th scope="col">View Claim</th>
                        <th scope="col">Status</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ID</td>
                                <td>@item.Name</td>
                                <td>
                                    <a href="@Url.Action("ViewClaims", "Home", new { userId = item.ID })" class="btn btn-success">View</a>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <!-- Approve Claim Button -->
                                        <form asp-action="ApproveClaim" method="post" style="display:inline;">
                                            <input type="hidden" name="claimId" value="@item.Claims.FirstOrDefault()?.Id" />
                                            <button type="submit" class="btn btn-success btn-sm">
                                                <i class="fas fa-check"></i> Approve
                                            </button>
                                        </form>

                                        <!-- Decline Claim Button -->
                                        <form asp-action="DeclineClaim" method="post" style="display:inline;">
                                            <input type="hidden" name="claimId" value="@item.Claims.FirstOrDefault()?.Id" />
                                            <button type="submit" class="btn btn-danger btn-sm">
                                                <i class="fas fa-times"></i> Decline
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted py-4">
                                No claims found.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
